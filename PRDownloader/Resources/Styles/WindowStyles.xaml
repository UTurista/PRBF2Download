<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:local="clr-namespace:PRDownloader"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="BaseStyle" TargetType="{x:Type Window}" >
        <Setter Property="Background" Value="{StaticResource DarkGreyBrush}"/>
        <Setter Property="Padding" Value="20" />
    </Style>


    <Style BasedOn="{StaticResource BaseStyle}" TargetType="{x:Type local:MainWindow}" />
    <Style BasedOn="{StaticResource BaseStyle}" TargetType="{x:Type local:OptionsWindow}" />
</ResourceDictionary>