<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PRDownloader.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:download="clr-namespace:PRDownloader.App.Pages.Download"
    xmlns:settings="clr-namespace:PRDownloader.App.Pages.Settings"
    xmlns:requirements="clr-namespace:PRDownloader.App.Pages.Requirements"
    Shell.FlyoutBehavior="Disabled"
    Title="PRDownloader.App">

    <ShellContent
      ContentTemplate="{DataTemplate requirements:RequirementsPage}"
      Route="RequirementsPage" />
    
    <ShellContent
        Title="Download Location"
        ContentTemplate="{DataTemplate settings:SettingsPage}"
        Route="SettingsPage" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate download:DownloadPage}"
        Route="DownloadPage" />


</Shell>
